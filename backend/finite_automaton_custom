digraph finite_automaton {
	rankdir=LR
	q0 [fillcolor=yellow shape=circle style=filled]
	s [fillcolor=yellow shape=circle style=filled]
	p [fillcolor=yellow shape=doublecircle style=filled]
	o [fillcolor=yellow shape=doublecircle style=filled]
	k [fillcolor=red fontcolor=white shape=circle style=filled]
	q0 -> s [label=saya]
	s -> p [label=makan]
	p -> o [label=nasi]
	o -> k
}
